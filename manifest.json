{
	"name": "百度广告去除插件--by HKing",
	"version": "1.0",
	"background": {
		"scripts": ["background.js"]
	},
	"content_scripts": [
		{
			"matches": ["https://www.baidu.com/*","http://image.baidu.com/*"],
			"css":["style.css"],
			"run_at":"document_start"
		}
	],
	"permissions": [
		"https://*.baidu.com/*","tabs"
	],
	"icons": {
		"128": "icon_128.png"
	},
	"browser_action": {
		"name": "百度广告去除插件--by HKing",
		"default_icon": "icon_128.png"
	},
	"manifest_version": 2
}
